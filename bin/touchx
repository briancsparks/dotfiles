#!/bin/bash -e

die() { echo "$@"; exit 1; }

if [[ $1 == -f ]]; then
  FORCE="1"
  shift
fi

if [[ -f "$@" ]]; then
  EXISTS="1"
fi

mkdir -p "$(dirname $1)"
touch "$@" && chmod +x "$@"


if [[ -n $EXISTS ]]; then
  [[ -z $FORCE ]] && die "$@ already exists, no change."
fi

echo "#!/bin/bash -e" >> "$@"
echo "" >> "$@"
echo 'readlink_f() { which greadlink > /dev/null && greadlink -f $1 || readlink -f $1; }' >> "$@"
echo 'script_dir="$( cd "$(dirname "$( readlink_f "${BASH_SOURCE[0]}" )" )" && pwd )"' >> "$@"
echo "" >> "$@"
echo 'errcho() { echo "$@" 1>&2; }' >> "$@"
echo 'die() { errcho "$@"; exit 1; }' >> "$@"
echo "" >> "$@"

