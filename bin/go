#!/bin/bash -e

eval "$(cli-shezargs $@)"

name="$1"

if [[ $name == jst ]]; then
  name="jenkinsservertester"
elif [[ $name == jdroid ]]; then
  name="jenkinsdroid"
fi

if [[ $name == "db" ]]; then
  ip="$SERVERASSIST_DB_IP"
  [[ -z $ip ]] && ip="$MARIO_DB_IP"
elif [[ $name == "mongo" ]]; then
  ip="$SERVERASSIST_DB_IP"
  [[ -z $ip ]] && ip="$MARIO_DB_IP"

elif [[ $name == "redis" ]]; then
  ip="$SERVERASSIST_UTIL_IP"
  [[ -z $ip ]] && ip="$MARIO_UTIL_IP"

elif [[ $name == "util" ]]; then
  ip="$SERVERASSIST_UTIL_IP"
  [[ -z $ip ]] && ip="$MARIO_UTIL_IP"

elif [[ $name == "jenkins" ]]; then
  ip="$SERVERASSIST_JENKINS_MASTER"
  [[ -z $ip ]] && ip="$MARIO_JENKINS_MASTER"

elif [[ $name == "jenkinsdroid" ]]; then
  ip="$SERVERASSIST_JENKINS_ANDROID_BUILD_SLAVE"
  [[ -z $ip ]] && ip="$MARIO_JENKINS_ANDROID_BUILD_SLAVE"

elif [[ $name == "jenkinsservertester" ]]; then
  ip="$SERVERASSIST_JENKINS_SERVER_TESTER"
  [[ -z $ip ]] && ip="$MARIO_JENKINS_SERVER_TESTER"

else
  echo ""
  echo "Usage: go db, mongo, redis, util, jenkins, jdroid, jst (jenkins server tester)"
  echo ""
  exit 0

fi

sshix $ip

