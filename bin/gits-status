#!/bin/bash -e

do_clean() {
  pushd . > /dev/null

  DIR="$1"

  cd $DIR
  local mod=$(git ls-files -m | wc -l)
  local new=$(git ls-files -o --exclude-standard | wc -l)

  if [[ $new == 0 && $mod == 0 ]]; then
    echo "------------------------- clean ----- $DIR -----"
    git status | sed -n '/up-to-date/d;/Your branch is/p'
  fi

  popd > /dev/null
}

do_changed() {
  pushd . > /dev/null

  DIR="$1"

  cd $DIR
  local mod=$(git ls-files -m | wc -l)
  local new=$(git ls-files -o --exclude-standard | wc -l)

  if [[ $new != 0 || $mod != 0 ]]; then
    echo ""
    echo ""
    echo "------------------------------------- $DIR -----"
    git status
  fi

  popd > /dev/null
}

#mario  mario_client  mario_netapp_server  mario_print_server  mario_util
#aws-json  js-aws  nginx-json  run-anywhere  sg

target_dir="${HOME}/dev"
repositories="$(find $target_dir -type d | egrep '\.git$' | egrep -v 'X/\.git$' | egrep -v '/dev/[^/]+X/')"

# Display changed
for d in $repositories; do
  dir="$(dirname $(dirname $d/..))"

  do_changed $dir
done

# Display clean dirs
for d in $repositories; do
  dir="$(dirname $(dirname $d/..))"

  do_clean $dir
done

do_changed "$HOME/dotfiles"
do_clean "$HOME/dotfiles"


